   "source": [
    "count = 0\n",
    "score_sum = 0\n",
    "while True:\n",
    "    score = int(input(\"点数を入力してください：\"))\n",
    "\n",
    "    if score == -1:\n",
    "        break\n",
    "\n",
    "    count += 1\n",
    "    score_sum += score\n",
    "\n",
    "print(f\"{count}人のテストの平均点は{round(score_sum / count, 1)}点です。\")\n"
   ]
